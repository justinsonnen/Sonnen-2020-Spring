<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="120dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/colorMidnight">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="15dp"
            android:background="@color/colorEmerald"
            android:layout_marginBottom="1dp"
            android:layout_marginLeft="1dp">


            <ImageView
                android:id="@+id/imageViewId"
                android:layout_width="64dp"
                android:layout_height="60dp"
                android:contentDescription="@string/app_name"
                app:srcCompat="@drawable/hop_image" />

            <TextView
                android:id="@+id/listBreweryName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="9dp"
                android:layout_toEndOf="@id/imageViewId"
                android:fontFamily="@font/bevan"
                android:padding="1dp"
                android:text="Brewery Name"
                android:textSize="26sp"
                android:textColor="@color/colorMidnight"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/listBeerName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/listBreweryName"
                android:fontFamily="@font/bevan"
                android:layout_marginLeft="29dp"
                android:layout_toEndOf="@id/imageViewId"
                android:padding="1dp"
                android:text="Beer Name"
                android:textColor="@color/colorMidnight"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/listBeerLook"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/listBeerName"
                android:fontFamily="@font/bevan"
                android:layout_marginTop="17dp"
                android:padding="7dp"
                android:text="TextView"
                android:textColor="@color/colorMidnight"/>

            <TextView
                android:id="@+id/listBeerSmell"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/listBeerLook"
                android:fontFamily="@font/bevan"
                android:layout_marginTop="7dp"
                android:padding="7dp"
                android:text="TextView"
                android:textColor="@color/colorMidnight"/>

            <TextView
                android:id="@+id/listBeerTaste"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/listBeerSmell"
                android:fontFamily="@font/bevan"
                android:layout_marginTop="7dp"
                android:padding="7dp"
                android:text="TextView"
                android:textColor="@color/colorMidnight"/>


            <Button
                android:id="@+id/listDeleteButton"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignTop="@id/listBreweryName"

                android:layout_alignParentRight="true"
                android:layout_marginLeft="9dp"
                android:background="@android:drawable/ic_delete"
                android:padding="12dp" />


        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>